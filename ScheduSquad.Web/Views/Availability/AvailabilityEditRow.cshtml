            <option value="10">10</option>
            <option value="11">11</option>
            <option value="12">12</option>
            <option value="13">13</option>
            <option value="14">14</option>
            <option value="15">15</option>
            <option value="16">16</option>
            <option value="17">17</option>
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
        <select class="form-select form-select-sm start-minute" data-availability-id="@Model.StartTime">
            <option value="0">00</option>
            <option value="15">15</option>
            <option value="30">30</option>
            <option value="45">45</option>
        </select>
        </td>
        <td role="cell"><select class="form-select form-select-sm end-hour" data-availability-id="@Model.EndTime">
            <option value="0">00</option>
            <option value="1">01</option>
            <option value="2">02</option>
            <option value="3">03</option>
            <option value="4">04</option>
            <option value="5">05</option>
            <option value="6">06</option>
            <option value="7">07</option>
            <option value="8">08</option>
            <option value="9">09</option>
            <option value="10">10</option>
            <option value="11">11</option>
            <option value="12">12</option>
            <option value="13">13</option>
            <option value="14">14</option>
            <option value="15">15</option>
            <option value="16">16</option>
            <option value="17">17</option>
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
        <select class="form-select form-select-sm end-minute" data-availability-id="@Model.EndTime">
            <option value="0">00</option>
            <option value="15">15</option>
            <option value="30">30</option>
            <option value="45">45</option>
        </select></td>
        <td role="cell"><button class="btn btn-primary save-button" data-availability-id=@Model.Id>Save</button></td>
        <td role="cell"><button class="btn btn-primary cancel-button" data-availability-id=@Model.Id>Cancel</button></td>
    </tr>

<script>
    $(document).ready(function () {
        $('.start-hour').val(@Model.StartTime.Hours.ToString()).change();
        $('.start-minute').val(@Model.StartTime.Minutes.ToString()).change();


        $('.end-hour').val(@Model.EndTime.Hours.ToString()).change();
        $('.end-minute').val(@Model.EndTime.Minutes.ToString()).change();
    });

</script>