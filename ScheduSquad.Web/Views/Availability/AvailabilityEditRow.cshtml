@model EditRowViewModel

    <tr role="row" data-availability-id="@Model.AvailabilityId">
        <td role="cell"> 
            <select class="custom-select form-select-sm day-list" data-availability-id="@Model.AvailabilityId" id="dayList">
                <option value="0">Sunday</option>
                <option value="1">Monday</option>
                <option value="2">Tuesday</option>
                <option value="3">Wednesday</option>
                <option value="4">Thursday</option>
                <option value="5">Friday</option>
                <option value="6">Saturday</option>
            </select>
        </td>
        <td role="cell">
            <div class="input-group mb-3">
                <select class="custom-select form-select-sm start-hour col-span-6" data-availability-id="@Model.StartTime" id="startHour">
                    <option value="0">00</option>
                    <option value="1">01</option>
                    <option value="2">02</option>
                    <option value="3">03</option>
                    <option value="4">04</option>
                    <option value="5">05</option>
                    <option value="6">06</option>
                    <option value="7">07</option>
                    <option value="8">08</option>
                    <option value="9">09</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                    <option value="17">17</option>
                    <option value="18">18</option>
                    <option value="19">19</option>
                    <option value="20">20</option>
                    <option value="21">21</option>
                    <option value="22">22</option>
                    <option value="23">23</option>
                </select>
                <select class="custom-select form-select-sm start-minute col-span-6" data-availability-id="@Model.StartTime" id="startMinute">
                    <option value="0">00</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                </select>
        
            </div>
        </td>
        <td role="cell">
            <div class="input-group mb-3">
                <select class="custom-select form-select-sm end-hour" data-availability-id="@Model.EndTime" id="endHour">
                    <option value="0">00</option>
                    <option value="1">01</option>
                    <option value="2">02</option>
                    <option value="3">03</option>
                    <option value="4">04</option>
                    <option value="5">05</option>
                    <option value="6">06</option>
                    <option value="7">07</option>
                    <option value="8">08</option>
                    <option value="9">09</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                    <option value="17">17</option>
                    <option value="18">18</option>
                    <option value="19">19</option>
                    <option value="20">20</option>
                    <option value="21">21</option>
                    <option value="22">22</option>
                    <option value="23">23</option>
                </select>
                <select class="custom-select form-select-sm end-minute" data-availability-id="@Model.EndTime" id="endMinute">
                    <option value="0">00</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                </select>
            </div>
        </td>
        <td role="cell">
            <button class="btn btn-primary save-button" data-availability-id=@Model.AvailabilityId id="saveButton">Save</button>
            <button class="btn btn-primary cancel-button" data-availability-id=@Model.AvailabilityId id="cancelButton">Cancel</button>
            
<script>
    $(document).ready(function () {
        $('.start-hour').val(@Model.StartTime.Hours.ToString()).change();
        $('.start-minute').val(@Model.StartTime.Minutes.ToString()).change();


        $('.end-hour').val(@Model.EndTime.Hours.ToString()).change();
        $('.end-minute').val(@Model.EndTime.Minutes.ToString()).change();
        
        $('.day-list').val(@Model.DayOfWeek).change();
    });

</script>
        </td>
    </tr>
