            <option value="15">15</option>
            <option value="30">30</option>
            <option value="45">45</option>
        </select></td>
        <td role="cell"><button class="btn btn-primary save-button" data-availability-id=@Model.Id>Save</button></td>
        <td role="cell"><button class="btn btn-primary cancel-button" data-availability-id=@Model.Id>Cancel</button></td>
    </tr>
    </table>
</div>

<script>
    $(document).ready(function () {
        $("#start-hour").val(@Model.StartTime.Hours.ToString());
        $("#start-minute").val(@Model.StartTime.Minutes.ToString());

    });
</script>